{
  "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "lib",
      "module": "esnext",
      "moduleResolution": "node",
      "target": "esnext",
      "declaration": true,
      "strict": true,
      "removeComments": true,
      "strictFunctionTypes": false,
      "sourceMap": true,
      "allowUnreachableCode": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react"
  },
  "compileOnSave": false,
  "include": ["src", "typings/*"],
  "exclude": ["node_modules", "dist", "lib", "**/*.spec.ts", "**/*.test.ts", "**/*.story.tsx", "**/*.stories.ts?x"]
}
